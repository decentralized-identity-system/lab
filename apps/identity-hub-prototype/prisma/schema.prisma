// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Dis {
  did             String @id @map("_id")
  didDocument     Json
  originalOwner   String
  hexDid          String
  salt            String
  signatureWallet String
  signatureDid    String
}

model Wallet {
  did         String @id @map("_id")
  chainId     Int
  creator     String
  address     String
  salt        Int
  pki         String
  recovery    String
  commitments Json
  identity    Json
}
